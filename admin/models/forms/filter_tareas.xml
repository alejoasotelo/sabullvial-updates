<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_BANNERS_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>

		<field
			name="codigo_cliente"
			type="clientetangoajax"
			label="JOPTION_SELECT_CLIENTE_TANGO"
			onchange="this.form.submit();"
			class="no-chosen no-select2 input-xlarge"
		>
			<option value="">JOPTION_SELECT_CLIENTE_TANGO</option>
		</field>
		
		<field
			name="id_cliente"
			type="clienteajax"
			label="JOPTION_SELECT_CLIENTE"
			onchange="this.form.submit();"
			class="no-chosen no-select2 input-xlarge"
		>
			<option value="">JOPTION_SELECT_CLIENTE</option>
		</field>

		<field
			name="codigo_vendedor"
			type="sitvendedor"
			label="COM_SABULLVIAL_CODIGO_VENDEDOR_LABEL"
			description="COM_SABULLVIAL__CODIGO_VENDEDOR_DESC"
			show_inhabilitados="true"
			show_codigo_label="true"
			default=""
			onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_VENDEDOR</option>
		</field>

		<field
			name="published"
			type="status"
			label="JOPTION_SELECT_PUBLISHED"
			description="JOPTION_SELECT_PUBLISHED_DESC"
			onchange="this.form.submit();"
			filter="1,2,*"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
		
		<field 
			name="start_date_from" 
			type="customtext"
			inputtype="date" 
			label="COM_SABULLVIAL_TAREAS_START_DATE_FROM_LABEL"
			description="COM_SABULLVIAL_TAREAS_START_DATE_FROM_DESC"
			addon="Inicio desde"
			addonposition="left"
			filter="user_utc"
			showtime="false"
			todaybutton="false"
			filltable="false"
			translateformat="true"
			onchange="this.form.submit();"
			descriptiontooltip="true"
		/>
		<field 
			name="start_date_to" 
			type="customtext"
			inputtype="date" 
			label="COM_SABULLVIAL_TAREAS_START_DATE_TO_LABEL"
			description="COM_SABULLVIAL_TAREAS_START_DATE_TO_DESC"
			addon="hasta"
			addonposition="left"
			filter="user_utc"
			showtime="false"
			todaybutton="false"
			filltable="false"
			translateformat="true"
			onchange="this.form.submit();"
			descriptiontooltip="true"
		/>
		
		<field
			name="task_type"
			type="list"
			label="JOPTION_SELECT_TYPE_TAREA"
			onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_TYPE_TAREA</option>
			<option value="llamada">COM_SABULLVIAL_TAREA_TASK_TYPE_LLAMADA</option>
			<option value="email">COM_SABULLVIAL_TAREA_TASK_TYPE_NOTIFICAR_POR_EMAIL</option>
			<option value="aprobar_cliente">COM_SABULLVIAL_TAREA_TASK_TYPE_APROBAR_CLIENTE</option>
			<option value="action">COM_SABULLVIAL_TAREA_TASK_TYPE_ACTION</option>
		</field>
		
		<field
			name="id_regla"
			type="regla"
			label="JOPTION_SELECT_REGLA"
			onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_REGLA</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_SABULLVIAL_LIST_FULL_ORDERING"
			description="COM_SABULLVIAL_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.id DESC"
			validate="options"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.name ASC">COM_SABULLVIAL_ORDERING_ASC</option>
			<option value="a.name DESC">COM_SABULLVIAL_ORDERING_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
			<option value="regla ASC">COM_SABULLVIAL_REGLA_ASC</option>
			<option value="regla DESC">COM_SABULLVIAL_REGLA_DESC</option>
			<option value="a.published ASC">COM_SABULLVIAL_PUBLISHED_ASC</option>
			<option value="a.published DESC">COM_SABULLVIAL_PUBLISHED_DESC</option>
			<option value="a.created_by ASC">COM_SABULLVIAL_AUTHOR_ASC</option>
			<option value="a.created_by DESC">COM_SABULLVIAL_AUTHOR_DESC</option>
			<option value="a.created ASC">COM_SABULLVIAL_CREATED_ASC</option>
			<option value="a.created DESC">COM_SABULLVIAL_CREATED_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_SABULLVIAL_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>