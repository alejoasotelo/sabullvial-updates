<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_BANNERS_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
		<field
			name="condicion_venta"
			type="condicionventa"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_CONDICION_VENTA</option>
		</field>
	</fields>

	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_SABULLVIAL_LIST_FULL_ORDERING"
			description="COM_SABULLVIAL_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="c.razon_soci ASC"
			validate="options"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="c.razon_soci ASC">COM_SABULLVIAL_RAZON_SOCIAL_ASC</option>
			<option value="c.razon_soci DESC">COM_SABULLVIAL_RAZON_SOCIAL_DESC</option>
			<option value="c.cod_client ASC">COM_SABULLVIAL_CODIGO_CLIENTE_ASC</option>
			<option value="c.cod_client DESC">COM_SABULLVIAL_CODIGO_CLIENTE_DESC</option>
			<option value="c.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="c.id DESC">JGRID_HEADING_ID_DESC</option>
			<option value="c.cuit ASC">COM_SABULLVIAL_CUIT_ASC</option>
			<option value="c.cuit DESC">COM_SABULLVIAL_CUIT_DESC</option>
			<option value="c.saldo_cc ASC">COM_SABULLVIAL_SALDO_ASC</option>
			<option value="c.saldo_cc DESC">COM_SABULLVIAL_SALDO_DESC</option>
			<option value="condicion_venta ASC">COM_SABULLVIAL_CONDICION_VENTA_ASC</option>
			<option value="condicion_venta DESC">COM_SABULLVIAL_CONDICION_VENTA_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_SABULLVIAL_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>