<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="basic">
		<field
			name="id"
			type="number"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			default="0"
			class="readonly"
			readonly="true"
		/>

		<field
			name="nombre"
			type="text"
			label="COM_SABULLVIAL_ESTADO_REMITO_NOMBRE_LABEL"
			description="COM_SABULLVIAL_ESTADO_REMITO_NOMBRE_DESC"
			size="40"
			class="inputbox"
			default=""
			required="true"
			onchange="jQuery('#jform_title').val(this.value);"
		/>

		<field
			name="color"
			type="color"
			label="COM_SABULLVIAL_ESTADO_REMITO_COLOR_LABEL"
			description="COM_SABULLVIAL_ESTADO_REMITO_COLOR_DESC"
			size="40"
			class="inputbox"
			default=""			
			required="true"
		/>

		<field
			name="color_texto"
			type="color"
			label="COM_SABULLVIAL_ESTADO_REMITO_COLOR_TEXTO_LABEL"
			description="COM_SABULLVIAL_ESTADO_REMITO_COLOR_TEXTO_DESC"
			size="40"
			class="inputbox"
			default="#ffffff"
			required="true"
		/>

		<field name="considerar" type="spacer" label="&lt;b&gt;Considerar cotizaciÃ³n como&lt;/b&gt;"/>

		<field
			name="proceso"
			type="radio"
			label="COM_SABULLVIAL_ESTADO_REMITO_PROCESO_LABEL"
			description="COM_SABULLVIAL_ESTADO_REMITO_PROCESO_DESC"
			class="btn-group btn-group-yesno"
			value="0"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field
			name="preparacion"
			type="radio"
			label="COM_SABULLVIAL_ESTADO_REMITO_PREPARACION_LABEL"
			description="COM_SABULLVIAL_ESTADO_REMITO_PREPARACION_DESC"
			class="btn-group btn-group-yesno"
			value="0"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field
			name="transito"
			type="radio"
			label="COM_SABULLVIAL_ESTADO_REMITO_EN_TRANSITO_LABEL"
			description="COM_SABULLVIAL_ESTADO_REMITO_EN_TRANSITO_DESC"
			class="btn-group btn-group-yesno"
			value="0"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field
			name="entregado"
			type="radio"
			label="COM_SABULLVIAL_ESTADO_REMITO_ENTREGADO_LABEL"
			description="COM_SABULLVIAL_ESTADO_REMITO_ENTREGADO_DESC"
			class="btn-group btn-group-yesno"
			value="0"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field
			name="entregado_mostrador"
			type="radio"
			label="COM_SABULLVIAL_ESTADO_REMITO_ENTREGADO_MOSTRADOR_LABEL"
			description="COM_SABULLVIAL_ESTADO_REMITO_ENTREGADO_MOSTRADOR_DESC"
			class="btn-group btn-group-yesno"
			value="0"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
			default="1"
			size="1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field
			name="spacer"
			type="spacer"
			hr="true"
		/>

		<field
			name="created"
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL"
			description="COM_SABULLVIAL_FIELD_CREATED_DESC"
			translateformat="true"
			showtime="true"
			size="22"
			filter="user_utc"
		/>

		<field
			name="created_by"
			type="user"
			label="COM_SABULLVIAL_FIELD_CREATED_BY_LABEL"
			description="COM_SABULLVIAL_FIELD_CREATED_BY_DESC"
		/>

		<field
			name="created_by_alias"
			type="text"
			label="COM_SABULLVIAL_FIELD_CREATED_BY_ALIAS_LABEL"
			description="COM_SABULLVIAL_FIELD_CREATED_BY_ALIAS_DESC"
			size="20"
		/>

		<field
			name="modified"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			description="COM_SABULLVIAL_FIELD_MODIFIED_DESC"
			class="readonly"
			translateformat="true"
			showtime="true"
			size="22"
			readonly="true"
			filter="user_utc"
		/>

		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"
		/>
	</fieldset>
</form>