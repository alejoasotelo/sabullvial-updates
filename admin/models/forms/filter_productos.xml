<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_BANNERS_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>

		<field
			name="iva"
			type="list"
			label="COM_SABULLVIAL_FILTER_IVA"
			default="1"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_IVA</option>
			<option value="1">COM_SABULLVIAL_IVA_SI</option>
			<option value="0">COM_SABULLVIAL_IVA_NO</option>
		</field>

		<field
			name="dolar"
			type="list"
			label="COM_SABULLVIAL_FILTER_DOLAR"
			default="0"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_DOLAR</option>
			<option value="1">COM_SABULLVIAL_DOLAR_SI</option>
			<option value="0">COM_SABULLVIAL_DOLAR_NO</option>
		</field>

		<field
			name="id_condicionventa"
			type="condicionventa"
			label="COM_SABULLVIAL_FILTER_CONDICION_VENTA"
			default="49"
			onchange="this.form.submit();"
			>
		</field>

		<field
			name="selected_ids"
			type="hidden"
		/>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_SABULLVIAL_LIST_FULL_ORDERING"
			description="COM_SABULLVIAL_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="codigo_sap ASC"
			validate="options"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="pm.nombre ASC">COM_SABULLVIAL_ORDERING_ASC</option>
			<option value="pm.nombre DESC">COM_SABULLVIAL_ORDERING_DESC</option>
			<option value="id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="id DESC">JGRID_HEADING_ID_DESC</option>
			<option value="codigo_sap ASC">COM_SABULLVIAL_PUBLISHED_ASC</option>
			<option value="codigo_sap DESC">COM_SABULLVIAL_PUBLISHED_DESC</option>
			<option value="orden ASC">COM_SABULLVIAL_CREATED_ASC</option>
			<option value="orden DESC">COM_SABULLVIAL_CREATED_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_SABULLVIAL_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>