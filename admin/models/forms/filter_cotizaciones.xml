<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_BANNERS_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>

		<field
			name="id_estadocotizacion"
			type="estadocotizacion"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			multiple="true"
			class="multipleEstadosCotizacion"
			onchange="this.form.submit();"
			>
		</field>

		<field
			name="id_estado_tango"
			type="estadocotizaciontango"
			multiple="true"
			class="chzn-color-state chzn-estadocotizaciontango multipleEstadosCotizacionTango"
			onchange="this.form.submit();"
			>
		</field>

		<field
			name="codigo_vendedor"
			type="sitvendedor"
			label="COM_SABULLVIAL_CODIGO_VENDEDOR_LABEL"
			description="COM_SABULLVIAL__CODIGO_VENDEDOR_DESC"
			onchange="this.form.submit();"
			show_inhabilitados="true"
			show_codigo_label="true"
			default=""
		>
			<option value="">JOPTION_SELECT_VENDEDOR</option>
		</field>
		
		<field
			name="author_id"
			type="autor"
			context="sabullvial_cotizacion"
			label="COM_SABULLVIAL_FILTER_AUTHOR_LABEL"
			description="COM_SABULLVIAL_FILTER_AUTHOR_DESC"
			multiple="true"
			class="multipleAuthors"
			onchange="this.form.submit();"
			/>

		<field 
			name="created_from" 
			type="customtext"
			inputtype="date" 
			label="COM_SABULLVIAL_DATE_FROM_LABEL"
			description="COM_SABULLVIAL_DATE_FROM_DESC"
			addon="Desde"
			addonposition="left"
			filter="user_utc"
			showtime="false"
			todaybutton="false"
			filltable="false"
			translateformat="true"
			onchange="this.form.submit();"
		/>
		<field 
			name="created_to" 
			type="customtext"
			inputtype="date" 
			label="COM_SABULLVIAL_DATE_TO_LABEL"
			description="COM_SABULLVIAL_DATE_TO_DESC"
			addon="Hasta"
			addonposition="left"
			filter="user_utc"
			showtime="false"
			todaybutton="false"
			filltable="false"
			translateformat="true"
			onchange="this.form.submit();"
		/>

		<field
			name="id_deposito"
			type="deposito"
			class=""
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_DEPOSITO</option>
		</field>

		<field
			name="esperar_pagos"
			type="list"
			class=""
			onchange="this.form.submit();"
			default=""
			>
			<option value="">JOPTION_SELECT_ESPERAR_PAGOS</option>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_SABULLVIAL_LIST_FULL_ORDERING"
			description="COM_SABULLVIAL_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.id DESC"
			validate="options"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
			<option value="a.created_by ASC">COM_SABULLVIAL_AUTHOR_ASC</option>
			<option value="a.created_by DESC">COM_SABULLVIAL_AUTHOR_DESC</option>
			<option value="a.created ASC">COM_SABULLVIAL_CREATED_ASC</option>
			<option value="a.created DESC">COM_SABULLVIAL_CREATED_DESC</option>
			<option value="cliente ASC">COM_SABULLVIAL_CLIENTE_ASC</option>
			<option value="cliente DESC">COM_SABULLVIAL_CLIENTE_DESC</option>
			<option value="pr.N_REMITO ASC">COM_SABULLVIAL_REMITO_ASC</option>
			<option value="pr.N_REMITO DESC">COM_SABULLVIAL_REMITO_DESC</option>
			<option value="pf.NCOMP_FAC ASC">COM_SABULLVIAL_FACTURA_ASC</option>
			<option value="pf.NCOMP_FAC DESC">COM_SABULLVIAL_FACTURA_DESC</option>
			<option value="estadocotizacion ASC">COM_SABULLVIAL_ESTADO_COTIZACION_ASC</option>
			<option value="estadocotizacion DESC">COM_SABULLVIAL_ESTADO_COTIZACION_DESC</option>
			<option value="total ASC">COM_SABULLVIAL_TOTAL_ASC</option>
			<option value="total DESC">COM_SABULLVIAL_TOTAL_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_SABULLVIAL_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>