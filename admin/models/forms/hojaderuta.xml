<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="hidden"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			default="0"
			class="readonly"
			readonly="true"
		/>

		<field
			name="name"
			type="hidden"
			label="COM_SABULLVIAL_HOJA_DE_RUTA_NOMBRE_LABEL"
			description="COM_SABULLVIAL_HOJA_DE_RUTA_NOMBRE_DESC"
			size="40"
			class="inputbox"
			default=""
			readonly="true"
		/>

		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
			default="1"
			size="1"
			readonly="true"
			>
			<option value="1">COM_SABULLVIAL_HOJAS_DE_RUTA_ESTADO_PUBLICADA</option>
			<option value="0">COM_SABULLVIAL_HOJAS_DE_RUTA_ESTADO_ANULADA</option>
		</field>

		<field
			name="chofer"
			type="text"
			label="COM_SABULLVIAL_HOJA_DE_RUTA_CHOFER_LABEL"
			description="COM_SABULLVIAL_HOJA_DE_RUTA_CHOFER_DESC"
			class="input-xxlarge"
			default=""
			readonly="true"
		/>

		<field
			name="patente"
			type="text"
			label="COM_SABULLVIAL_HOJA_DE_RUTA_PATENTE_LABEL"
			description="COM_SABULLVIAL_HOJA_DE_RUTA_PATENTE_DESC"
			class="inputbox"
			default=""
			readonly="true"
		/>

		<field
			name="delivery_date"
			type="text"
			label="COM_SABULLVIAL_HOJA_DE_RUTA_FECHA_ENTREGA_LABEL"
			description="COM_SABULLVIAL_HOJA_DE_RUTA_FECHA_ENTREGA_DESC"
			readonly="true"
		/>

		<field 
			name="hojaderutaremito" 
			type="subform"
			label="COM_SABULLVIAL_HOJA_DE_RUTA_HOJA_DE_RUTA_REMITO_LABEL"
			multiple="true"
			layout="sabullvial.form.field.subform.table"
			buttons=" "
		>
			<form name="hojaderutaremitoform" class="hojaderutaremito-detalles">
				<field
					name="id_estadoremito"
					type="estadoremito"
					label="JSTATUS"
					class="chzn-color-state chzn-estadoremito"
					onchange="changeEstadoRemito(this)"
				/>
				
				<field
					name="numero_remito"
					type="text"
					label="COM_SABULLVIAL_HOJA_DE_RUTA_NUMERO_REMITO_LABEL"
					class="inputbox"
					readonly="true"
					layout="sabullvial.form.field.label"
					width_th="120"
				/>
				
				<field
					name="estadoremito_image"
					type="image"
					label="COM_SABULLVIAL_HOJA_DE_RUTA_IMAGE_LABEL"
					class="inputbox"
					preview="false"
					button="true"
					delete="false"
					width="100"
					height="100"
					width_th="120"
					ondelete="onDeleteImagenRemito(this)"
				/>

				<field
					name="cliente"
					type="text"
					label="COM_SABULLVIAL_HOJA_DE_RUTA_CLIENTE_LABEL"
					class="inputbox"
					readonly="true"
					layout="sabullvial.form.field.label"
				/>

				<field
					name="direccion"
					type="text"
					label="COM_SABULLVIAL_HOJA_DE_RUTA_DIRECCION_LABEL"
					class="inputbox"
					readonly="true"
					layout="sabullvial.form.field.label"
				/>

				<field
					name="expreso"
					type="text"
					label="COM_SABULLVIAL_HOJA_DE_RUTA_EXPRESO_LABEL"
					class="inputbox"
					readonly="true"
					layout="sabullvial.form.field.label"
				/>

				<field
					name="transporte_direccion"
					type="text"
					label="COM_SABULLVIAL_HOJA_DE_RUTA_DIRECCION_LABEL"
					class="inputbox"
					readonly="true"
					layout="sabullvial.form.field.label"
				/>

				<field
					name="mercaderia"
					type="text"
					label="COM_SABULLVIAL_HOJA_DE_RUTA_MERCADERIA_LABEL"
					class="inputbox"
					class_header="nowrap-sm"
					readonly="true"
					layout="sabullvial.form.field.label"
					format="html"
				/>

				<field
					name="monto"
					type="text"
					label="COM_SABULLVIAL_HOJA_DE_RUTA_MONTO_LABEL"
					class="inputbox"
					readonly="true"
					layout="sabullvial.form.field.label"
					format="price"
				/>

				<field
					name="id"
					type="hidden"
					readonly="true"
				/>
			</form>
		</field>

		<field
			name="created"
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL"
			description="COM_SABULLVIAL_FIELD_CREATED_DESC"
			translateformat="true"
			showtime="true"
			size="22"
			filter="user_utc"
			readonly="true"
		/>

		<field
			name="created_by"
			type="user"
			label="COM_SABULLVIAL_FIELD_CREATED_BY_LABEL"
			description="COM_SABULLVIAL_FIELD_CREATED_BY_DESC"
			readonly="true"
		/>

		<field
			name="created_by_alias"
			type="text"
			label="COM_SABULLVIAL_FIELD_CREATED_BY_ALIAS_LABEL"
			description="COM_SABULLVIAL_FIELD_CREATED_BY_ALIAS_DESC"
			size="20"
			readonly="true"
		/>

		<field
			name="modified"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			description="COM_SABULLVIAL_FIELD_MODIFIED_DESC"
			class="readonly"
			translateformat="true"
			showtime="true"
			size="22"
			readonly="true"
			filter="user_utc"
		/>

		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"
		/>

	</fieldset>
</form>