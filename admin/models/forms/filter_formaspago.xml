<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_BANNERS_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
		<field
			name="published"
			type="status"
			label="JOPTION_SELECT_PUBLISHED"
			description="JOPTION_SELECT_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
		<field
			name="author_id"
			type="author"
			label="COM_SABULLVIAL_FILTER_AUTHOR"
			description="COM_SABULLVIAL_FILTER_AUTHOR_DESC"
			multiple="true"
			class="multipleAuthors"
			onchange="this.form.submit();"
			>
			<option value="0">JNONE</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_SABULLVIAL_LIST_FULL_ORDERING"
			description="COM_SABULLVIAL_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.nombre ASC"
			validate="options"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.nombre ASC">COM_SABULLVIAL_ORDERING_ASC</option>
			<option value="a.nombre DESC">COM_SABULLVIAL_ORDERING_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
			<option value="a.published ASC">COM_SABULLVIAL_PUBLISHED_ASC</option>
			<option value="a.published DESC">COM_SABULLVIAL_PUBLISHED_DESC</option>
			<option value="a.created_by ASC">COM_SABULLVIAL_AUTHOR_ASC</option>
			<option value="a.created_by DESC">COM_SABULLVIAL_AUTHOR_DESC</option>
			<option value="a.created ASC">COM_SABULLVIAL_CREATED_ASC</option>
			<option value="a.created DESC">COM_SABULLVIAL_CREATED_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_SABULLVIAL_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>