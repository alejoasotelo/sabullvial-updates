<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/plugins/fields/mediajce/fields">
		<field
			name="id"
			type="number"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			default="0"
			class="readonly"
			readonly="true"
		/>
		<field
			name="id_producto"
			type="text"
			label="COM_SABULLVIAL_PRODUCTO_IMAGEN_ID_PRODUCTO_LABEL"
			description="COM_SABULLVIAL_PRODUCTO_IMAGEN_ID_PRODUCTO_DESC"
			default="0"
			class="readonly"
			readonly="true"
		/>

		<field 
			name="images" 
			type="subform"
			label="COM_SABULLVIAL_PRODUCTO_IMAGEN_IMAGENES_LABEL"
			multiple="true"
			layout="joomla.form.field.subform.repeatable-table"
			min="1"
		>
			<form name="productoimagesform" class="producto-images">			
				<field
					name="path"
					type="mediaJce"
					label="COM_SABULLVIAL_PRODUCTO_IMAGEN_IMAGEN_LABEL"
					description="COM_SABULLVIAL_PRODUCTO_IMAGEN_IMAGEN_DESC"
				/>
			</form>
		</field>
		
		<field
			name="url"
			type="text"
			label="COM_SABULLVIAL_PRODUCTO_IMAGEN_URL_LABEL"
			description="COM_SABULLVIAL_PRODUCTO_IMAGEN_URL_DESC"
			class="input-xxlarge"
			hint="COM_SABULLVIAL_PRODUCTO_IMAGEN_URL_HINT"
		/>

		<field
			name="spacer"
			type="spacer"
			hr="true"
		/>

		<field
			name="created"
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL"
			description="COM_SABULLVIAL_FIELD_CREATED_DESC"
			translateformat="true"
			showtime="true"
			size="22"
			filter="user_utc"
		/>

		<field
			name="created_by"
			type="user"
			label="COM_SABULLVIAL_FIELD_CREATED_BY_LABEL"
			description="COM_SABULLVIAL_FIELD_CREATED_BY_DESC"
		/>

		<field
			name="created_by_alias"
			type="text"
			label="COM_SABULLVIAL_FIELD_CREATED_BY_ALIAS_LABEL"
			description="COM_SABULLVIAL_FIELD_CREATED_BY_ALIAS_DESC"
			size="20"
		/>

		<field
			name="modified"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			description="COM_SABULLVIAL_FIELD_MODIFIED_DESC"
			class="readonly"
			translateformat="true"
			showtime="true"
			size="22"
			readonly="true"
			filter="user_utc"
		/>

		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"
		/>
	</fieldset>
</form>