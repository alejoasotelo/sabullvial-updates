<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_BANNERS_SEARCH_IN_TITLE"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
		<field
			name="published"
			type="status"
			label="JOPTION_SELECT_PUBLISHED"
			description="JOPTION_SELECT_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
		<field
			name="id_chofer"
			type="chofer"
			label="COM_SABULLVIAL_VEHICULOS_FILTER_CHOFER"
			description="COM_SABULLVIAL_VEHICULOS_FILTER_CHOFER_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_CHOFER</option>
		</field>
		<field
			name="author_id"
			type="author"
			label="COM_SABULLVIAL_FILTER_AUTHOR"
			description="COM_SABULLVIAL_FILTER_AUTHOR_DESC"
			multiple="true"
			class="multipleAuthors"
			onchange="this.form.submit();"
			>
			<option value="0">JNONE</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_SABULLVIAL_LIST_FULL_ORDERING"
			description="COM_SABULLVIAL_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="patente ASC"
			validate="options"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="patente ASC">COM_SABULLVIAL_VEHICULOS_PATENTE_ASC</option>
			<option value="patente DESC">COM_SABULLVIAL_VEHICULOS_PATENTE_DESC</option>
			<option value="chofer ASC">COM_SABULLVIAL_VEHICULOS_CHOFER_ASC</option>
			<option value="chofer DESC">COM_SABULLVIAL_VEHICULOS_CHOFER_DESC</option>
			<option value="monto_seguro ASC">COM_SABULLVIAL_VEHICULOS_MONTO_SEGURO_ASC</option>
			<option value="monto_seguro DESC">COM_SABULLVIAL_VEHICULOS_MONTO_SEGURO_DESC</option>			
			<option value="id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="id DESC">JGRID_HEADING_ID_DESC</option>
			<option value="published ASC">COM_SABULLVIAL_PUBLISHED_ASC</option>
			<option value="published DESC">COM_SABULLVIAL_PUBLISHED_DESC</option>
			<option value="author ASC">COM_SABULLVIAL_AUTHOR_ASC</option>
			<option value="author DESC">COM_SABULLVIAL_AUTHOR_DESC</option>
			<option value="created ASC">COM_SABULLVIAL_CREATED_ASC</option>
			<option value="created DESC">COM_SABULLVIAL_CREATED_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_SABULLVIAL_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>